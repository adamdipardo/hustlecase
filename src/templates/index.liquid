<section class="container-fluid home buy alt" id="product">
	<div class="row">
		<div class="col-lg-6 lg-push-6 image">
			<div class="siema">
				<div class="slider-image" style="background-image: url({{ 'buy.jpg' | asset_url }});"></div>
				<!--<div class="slider-image" style="background-image: url({{ 'buy.jpg' | asset_url }});"></div>
				<div class="slider-image" style="background-image: url({{ 'buy.jpg' | asset_url }});"></div>-->
			</div>
			<!--<ul class="siema-controls">
				<li class="active"></li>
				<li></li>
				<li></li>
			</ul>-->
		</div>
		<div class="col-lg-6 placeholder"></div>
		<div class="col-lg-6 lg-pull-6 content">
			<div class="box narrow">
				<h1>$32.00<span>CAD</span></h1>
				<h5>Plus shipping & taxes</h5>

				<div class="form">
					<form action="/cart/add" method="post" enctype="multipart/form-data" class="" data-section="{{ section.id }}">
						{% for product in collections.all.products limit: 1 %}
							<div class="form-group">
								<label for="ProductSelect-{{ section.id }}">Laptop type:</label>
								<select name="id" id="ProductSelect-{{ section.id }}" data-section="{{ section.id }}" class="form-control" style="background-image: url({{ 'Arrow-icon.svg' | asset_url }})">
	              					{% for variant in product.variants %}
	                					{% if variant.available %}
	                  						<option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
	                    						{{ variant.title }}
	                  						</option>
	                					{% else %}
	                  						<option disabled="disabled">{{ variant.title }} - {{ 'products.product.sold_out' | t }}</option>
	                					{% endif %}
	              					{% endfor %}
	            				</select>
	            			</div>
			            {% endfor %}
						<div class="form-group">
							<div>
								<div class="pull-left">
									<button type="submit" class="btn btn-primary">Preorder</button>
								</div>
								<div class="pull-right">
									<div class="secure"><i class="fa fa-lock"></i>Payments are processed via secure Shopify server</div>
								</div>
							</div>
							<div class="clearfix"></div>
						</div>
						<input type="hidden" name="return_to" value="/checkout/" />
					</form>
				</div>
				<p>HustleCase is expected to ship in October.</p>
				<p>If you don't see your laptop here, <a href="mailto:hello@hustlecase.com">email us‚Ä®</a> with your laptop details.</p>
			</div>
		</div>
	</div>
</section>
